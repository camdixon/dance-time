<div class="row col-sm-6" style="margin-left: 30px; margin-bottom: 40px;">
  <%= form_for @student do |f| %>
    <% if @student.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@student.errors.count, "error") %> prohibited
          creating your account:</h2>
        <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :first_name, 'First name' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :last_name, 'Last name' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :cell_phone, 'Cell phone #'%>
      <%= f.text_field :cell_phone, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :home_phone, 'Home phone #' %>
      <%= f.text_field :home_phone, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :email, 'Email address' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :partner_first_name, 'Partner\'s first name' %>
      <%= f.text_field :partner_first_name, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :partner_last_name, 'Partner\'s last name' %>
      <%= f.text_field :partner_last_name, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :partner_email, 'Partner\'s email address' %>
      <%= f.text_field :partner_email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :image_url, 'Image URL' %>
      <%= f.text_field :image_url, class: 'form-control' %>
    </div>
  
    <%= f.hidden_field :studio_id, :value => current_studio.id %>

    <%= f.submit submit_copy, class: 'btn btn-primary' %>
    &nbsp;or
    <%= link_to 'Cancel', new_session_path %>
  <% end %>
</div>
