<div class="page-header" style="margin-left: 40px;">
  <div class="row">
    <h1 class="col-sm-8">Studio Log In</h1>
    <div class="col-sm-6">
      <span style="margin-right: 20px"><%= link_to 'Create New User', new_user_path, class: 'btn btn-default pull-left' %></span>
    </div>
  </div>
</div>

<div class="row" style="margin-left: 25px;">
  <div class="col-sm-6">
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
  
      <div class="actions"><%= submit_tag "Login", class: 'btn btn-primary' %></div>
      &nbsp;or
      <%= link_to 'Cancel', root_url %>
    <% end %>
  </div>
</div>
