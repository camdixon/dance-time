<div class="page-header">
  <div class="row">
    <h1 class="col-sm-4" style="margin-left: 10px">All Lessons</h1>
    <div class="btn-group pull-right" style="margin-right: 100px;">
      <span><%= link_to 'Logout', 'logout', class: 'btn btn-default pull-right' %></span>
      <span><%= link_to 'Schedule', users_path, class: 'btn btn-default pull-right' %></span>
      <span><%= link_to 'Add a Student', new_student_path, class: 'btn btn-default pull-right' %></span>
      <span><%= link_to 'All Students', students_path, class: 'btn btn-default pull-right' %></span>
    </div>
  </div>
</div>

<div class="wrapper">
  <table class="table assignment-table">
    <thead>
      <tr>
        <th>Teacher Name</th>
        <th>Student Name</th>
        <th>Date</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
        <% current_studio.lessons.each do |lesson| %>
          <tr id="<%= dom_id(lesson) %>">
            <td><%= lesson.user.name %></td>
            <td><%= lesson.student.full_name %></td>
            <td><%= lesson.start_time.strftime("%m-%d-%Y") %></td>
            <td><%= lesson.start_time.strftime("%I:%M %p") %></td>
            <td><%= lesson.end_time.strftime("%I:%M %p") %></td>
            <td><span><%= link_to 'Move', lesson_path(lesson), class: 'btn btn-success', method: :move %></span></td>
            <td><span><%= link_to 'No Show', lesson_path(lesson), class: 'btn btn-primary', method: :noshow %></span></td>
            <td><span><%= link_to 'Charge', lesson_path(lesson), class: 'btn btn-warning', method: :charge %></span></td>
            <td><span><%= link_to 'Delete', lesson_path(lesson), class: 'btn btn-danger', method: :delete %></span></td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>